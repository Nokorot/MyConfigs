    font pango:System San Francisco Display, FontAwesome 11
    # DejaVu Sans Mono 10
    status_command i3blocks
    position top
    # strip_workspace_numbers yes
    separator_symbol "â•‘"
    colors {
        background #020202
        statusline #ffffff
        separator #666666
                #             ol     bg     fg
        focused_workspace  #020202 #020202 #ffffff
        inactive_workspace #020202 #020202 #888888
    }
}



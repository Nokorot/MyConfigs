# Basics
shutdown        prompt "Shutdown computer?" "SUDO_ASKPASS='/usr/bin/ask_test' sudo -A shutdown now"
reboot          prompt "Reboot computer?" "sudo reboot"
hibernate 	    prompt "Reboot computer?" "sudo -A systemctl suspend"
exit            prompt "Exit i3?" "i3-msg exit"
lock            xset dpms force off; i3lock-fancy

unicode         dmenuunicode
unicode_insert  dmenuunicode insert

nn_notes        nn --browse
nb              nb --browse

dl_uni          python $HOME/UniMaterial/read_feed.py

%include .config/dml/progs.dml
%include .config/dml/games.dml
%include .config/dml/i3.dml
%include .config/dml/web.dml

#               This does not stop the mpv subprosess. 
#               Could run mpv in a thread, that would be closed when proting to C.
ytpl            pkill ytpl; ytpl -s ~/LMedia/Music/*.lst

ci3             i3 workspace i3_conf; cd ~/.config/i3; $TERMINAL
vdml            i3 workspace dml_conf; cd ~/.config/dml; $TERMINAL
# i3-msg         dml -p "i3-msg" -c "$HOME/.config/dml/i3.dml"
